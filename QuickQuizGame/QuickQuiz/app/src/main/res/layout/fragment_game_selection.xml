<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context="com.example.eliferbil.quickquiz.GameSelectionFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/gameSelectionHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:layout_margin="20dp"
        android:text="What kind of a game do you want to play?" />

    <Button
        android:id="@+id/singlePlayer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="18dp"
        android:text="Single Player" />

    <Button
        android:id="@+id/challenge"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="18dp"
        android:text="Challenge a Friend" />

</LinearLayout>
