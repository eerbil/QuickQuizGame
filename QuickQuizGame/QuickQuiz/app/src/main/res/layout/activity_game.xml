<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.eliferbil.quickquiz.QuickQuiz.GameActivity">

    <Button
        android:text="400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/food4"
        android:layout_alignBaseline="@+id/music4"
        android:layout_alignBottom="@+id/music4"
        android:layout_alignLeft="@+id/food5"
        android:layout_alignStart="@+id/food5" />

    <TextView
        android:text="Music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="36dp"
        android:id="@+id/musicText" />

    <TextView
        android:text="History"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/historyText"
        android:textSize="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/music3"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/music4"
        android:layout_above="@+id/music3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp" />

    <Button
        android:text="500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hist5"
        android:layout_alignBaseline="@+id/music5"
        android:layout_alignBottom="@+id/music5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/food5"
        android:layout_alignBaseline="@+id/music5"
        android:layout_alignBottom="@+id/music5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/foodText"
        android:textSize="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/food5"
        android:layout_alignStart="@+id/food5" />

    <Button
        android:text="200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/music2"
        android:layout_below="@+id/music3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hist3"
        android:layout_alignBaseline="@+id/food3"
        android:layout_alignBottom="@+id/food3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hist2"
        android:layout_alignBaseline="@+id/music2"
        android:layout_alignBottom="@+id/music2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hist1"
        android:layout_alignBaseline="@+id/music1"
        android:layout_alignBottom="@+id/music1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/food1"
        android:layout_alignBaseline="@+id/hist1"
        android:layout_alignBottom="@+id/hist1"
        android:layout_alignLeft="@+id/food2"
        android:layout_alignStart="@+id/food2" />

    <Button
        android:text="200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/food2"
        android:layout_alignBaseline="@+id/music2"
        android:layout_alignBottom="@+id/music2"
        android:layout_alignLeft="@+id/food4"
        android:layout_alignStart="@+id/food4" />

    <Button
        android:text="400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/food4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/hist4" />

    <Button
        android:text="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/music1"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/music2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/food3"
        android:layout_alignBaseline="@+id/music3"
        android:layout_alignBottom="@+id/music3"
        android:layout_alignLeft="@+id/food4"
        android:layout_alignStart="@+id/food4" />

    <Button
        android:text="500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/music5"
        android:layout_above="@+id/music4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />

    <Button
        android:text="Start Over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:id="@+id/startOver"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Score: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/scoreboard" />
</RelativeLayout>
